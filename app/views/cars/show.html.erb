<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://static.pexels.com/photos/24353/pexels-photo.jpg');">
  <div class="banner-content">
    <h1><%= @car.name %></h1>
    <p><%= @car.brand %> (<%= @car.year %>) </p>
    <a class="btn btn-primary btn-lg">GET IT</a>
  </div>
</div>


<div class="container">
  <% @car.reviews.each do |review|%>

    <div class="review">
      <h2><%= review.content %></h2>
      <p><%= review.rating %> stars</p>
    </div>

  <% end %>
</div>



<%= link_to "Back to list of cars", cars_path %>
<%=link_to "Delete car", car_path(@car), method: :delete %>
<%= link_to "Leave review", new_car_review_path(@car) %>
