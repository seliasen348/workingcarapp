<h1 class="text-center">List of cars</h1>

<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://static.pexels.com/photos/24353/pexels-photo.jpg');">
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2><%= car.name %></h2>
          <p><%= car.brand %> - <%= car.year%></p>
        </div>
        <%= link_to "", car_path(car), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

